<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.RegisterController">
    <center>
        <VBox alignment="CENTER" prefHeight="280.0" prefWidth="518.0" spacing="10">
            <GridPane alignment="CENTER" hgap="10" vgap="10" >
                <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" text="alireza"/>
                <Label text="IP Address" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="ipField" GridPane.columnIndex="1" GridPane.rowIndex="1" text="localhost"/>
                <Label text="Port Number" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="portField" GridPane.columnIndex="1" GridPane.rowIndex="2" text="1234"/>
            </GridPane>
            <Label fx:id="errorLabel" text=""/>
            <Button text="Done" onAction="#handleDoneButton">
                <VBox.margin>
                    <Insets top="40"/>
                </VBox.margin>
            </Button>

        </VBox>
    </center>

</BorderPane>
